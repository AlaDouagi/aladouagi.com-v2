---
const AUTHOR_NAME = 'Alaeddine Douagi'
const AUTHOR_JOB_TITLE = 'Web Developer'
const OG_BG_ROUTE = '/assets/og-bg-raw.jpg'
const AUTHOR_PIC_ROUTE = '/assets/portrait-square.jpg'
const {postTitle} = Astro.props
---

<div
  class="relative w-full h-full flex flex-col items-start justify-center bg-cover px-6 pt-6 pb-4"
  style={{
    backgroundImage: `url("${OG_BG_ROUTE}")`,
  }}
>
  <!-- prettier-ignore -->
  <div
    class="flex text-2xl md:text-2xl lg:text-3xl font-['Kaisei_Tokumin'] tracking-tighter text-white leading-12 whitespace-pre-wrap !my-auto mx-8 py-4"
  >{postTitle}</div>
  <div class="relative !mt-auto flex w-full h-14 items-center">
    <div
      class="relative h-8 w-8 md:h-14 md:w-14 flex items-start justify-center bg-cover rounded-full"
      style={{
        backgroundImage: `url("${AUTHOR_PIC_ROUTE}")`,
      }}
    >
    </div>
    <div
      class="flex flex-col w-full text-white font-['Kaisei_Tokumin'] ps-3 flex-1"
    >
      <span class="text-sm md:text-lg">
        {AUTHOR_NAME}
      </span>
      <span class="text-xs md:text-sm">
        {AUTHOR_JOB_TITLE}
      </span>
    </div>
  </div>
</div>
